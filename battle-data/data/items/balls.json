{
  "masterball": {
    "name": "Master Ball",
    "target": "IsolatedFoe",
    "flags": ["Ball"],
    "effect": {
      "callbacks": { "on_modify_catch_rate": ["return $catch_rate * 255"] }
    }
  },
  "ultraball": {
    "name": "Ultra Ball",
    "target": "IsolatedFoe",
    "flags": ["Ball"],
    "effect": {
      "callbacks": { "on_modify_catch_rate": ["return $catch_rate * 2"] }
    }
  },
  "greatball": {
    "name": "Great Ball",
    "target": "IsolatedFoe",
    "flags": ["Ball"],
    "effect": {
      "callbacks": { "on_modify_catch_rate": ["return $catch_rate * 3/2"] }
    }
  },
  "pokeball": {
    "name": "Pok√© Ball",
    "target": "IsolatedFoe",
    "flags": ["Ball"]
  },
  "safariball": { "name": "Safari Ball", "flags": ["Ball"] },
  "netball": {
    "name": "Net Ball",
    "target": "IsolatedFoe",
    "flags": ["Ball"],
    "effect": {
      "callbacks": {
        "on_modify_catch_rate": [
          "if $target.types hasany [water, bug]:",
          ["return $catch_rate * 7/2"]
        ]
      }
    }
  },
  "diveball": {
    "name": "Dive Ball",
    "target": "IsolatedFoe",
    "flags": ["Ball"],
    "effect": {
      "callbacks": {
        "on_modify_catch_rate": [
          "if $field.environment == water:",
          ["return $catch_rate * 7/2"]
        ]
      }
    }
  },
  "nestball": {
    "name": "Nest Ball",
    "target": "IsolatedFoe",
    "flags": ["Ball"],
    "effect": {
      "callbacks": {
        "on_modify_catch_rate": [
          "$level = $target.level",
          "if $level < 1 or $level > 29:",
          ["return"],
          "return $catch_rate * ((41 - $level) / 10)"
        ]
      }
    }
  },
  "repeatball": {
    "name": "Repeat Ball",
    "target": "IsolatedFoe",
    "flags": ["Ball"],
    "effect": {
      "callbacks": {
        "on_modify_catch_rate": [
          "$base_species = func_call(base_species: $target)",
          "if func_call(has_species_registered: $source.player $base_species):",
          ["return $catch_rate * 7/2"]
        ]
      }
    }
  },
  "timerball": {
    "name": "Timer Ball",
    "target": "IsolatedFoe",
    "flags": ["Ball"],
    "effect": {
      "callbacks": {
        "on_modify_catch_rate": [
          "return $catch_rate * func_call(min: expr(1 + $battle.turn * 3/10) 4)"
        ]
      }
    }
  },
  "luxuryball": {
    "name": "Luxury Ball",
    "target": "IsolatedFoe",
    "flags": ["Ball"],
    "condition": {
      "callbacks": {
        "on_modify_friendship_increase": ["return $friendship + 1"]
      }
    }
  },
  "premierball": { "name": "Premier Ball", "flags": ["Ball"] },
  "duskball": {
    "name": "Dusk Ball",
    "target": "IsolatedFoe",
    "flags": ["Ball"],
    "effect": {
      "callbacks": {
        "on_modify_catch_rate": [
          "if $field.environment == cave or $field.time == evening or $field.time == night:",
          ["return $catch_rate * 3"]
        ]
      }
    }
  },
  "healball": {
    "name": "Heal Ball",
    "target": "IsolatedFoe",
    "flags": ["Ball"],
    "effect": {
      "callbacks": {
        "on_catch": [
          "# NOTE: This is not logged. The Mon has exited the battle so this is just for the caught data the player receives.",
          "force_fully_heal: $target"
        ]
      }
    }
  },
  "quickball": {
    "name": "Quick Ball",
    "target": "IsolatedFoe",
    "flags": ["Ball"],
    "effect": {
      "callbacks": {
        "on_modify_catch_rate": [
          "if $battle.turn == 1:",
          ["return $catch_rate * 5"]
        ]
      }
    }
  },
  "cherishball": { "name": "Cherish Ball", "flags": ["Ball"] },
  "lureball": { "name": "Lure Ball", "flags": ["Ball"] },
  "levelball": { "name": "Level Ball", "flags": ["Ball"] },
  "moonball": { "name": "Moon Ball", "flags": ["Ball"] },
  "heavyball": { "name": "Heavy Ball", "flags": ["Ball"] },
  "fastball": { "name": "Fast Ball", "flags": ["Ball"] },
  "friendball": { "name": "Friend Ball", "flags": ["Ball"] },
  "loveball": { "name": "Love Ball", "flags": ["Ball"] },
  "parkball": { "name": "Park Ball", "flags": ["Ball"] },
  "sportball": { "name": "Sport Ball", "flags": ["Ball"] },
  "dreamball": { "name": "Dream Ball", "flags": ["Ball"] },
  "beastball": { "name": "Beast Ball", "flags": ["Ball"] },
  "strangeball": { "name": "Strange Ball", "flags": ["Ball"] }
}
